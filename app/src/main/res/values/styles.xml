<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#008080</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ffA500</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyRowTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#B9B9B9</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/column_border</item>
    </style>
</resources>